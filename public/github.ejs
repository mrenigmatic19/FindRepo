<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="./assets/css/style.css" rel="stylesheet">
</head>

<body>
   
    <div class="container py-5 " >
        <div class="row border rounded-5 p-3 bg-white shadow box-area" style="width:100%;margin:auto">

            <!-- Left Box -->
            <div class="col-md-6 rounded-4 d-flex justify-content-center align-items-center flex-column " style="background: #212021;">
                <div class="featured-image mb-3">
                    <img src="./assets/images/github.png" class="img-fluid" style="width: 250px; margin-top: 15px;margin-bottom: 15px;">
                </div>
    
            </div> 
    
            <!-- Right Box -->
            <div class="col-md-6 right-box" >
                <div class="row align-items-center text-center" style="height: 40vh;min-height: none;" >
            
                    <!-- Search Repositories Section -->
                    <div>
                        <div class="col-12 mb-2">
                            <p class="fs-2" style="font-family: 'Courier New', Courier, monospace; font-weight: 600; color: #212021;line-height: 1;">Search Repositories<br>By Username</p>
                        </div>
                
                        <div class="col-12 mb-4">
                          
                            <form class="input-group" method="post" action="/">
                                <input type="text" class="form-control form-control-lg bg-light fs-6" placeholder="Input Username" name="username">
                                <input type="submit" class="btn btn-lg btn-primary fs-6" style="background-color: #212021;" value="Search">
                            </form>
                        </div>
    
                        <div  class="col-12 mb-2">
                            <p style="font-family: 'Courier New', Courier, monospace; font-weight: 400; color: #212021;line-height: 1.5;">Effortlessly explore code<br>with our GitHub Insight tool</p>
                        </div>
                
                    </div>
                    
                </div>
            </div>
            
    
        </div>
        <div class="container d-flex justify-content-center align-items-center ">
            <h1 class="col-6 mb-6">Repository Listed </h1>
            <div class="limit-input col-6 mb-2">
                <form class="input-group" method="get" action="/result">
                    <input type="number" class="form-control form-control-lg bg-light fs-6" id="limit" name="limit" value="<%= results.next ? results.next.limit : '' %>" min="1">
                    <input type="submit" class="btn btn-lg btn-primary fs-6" style="background-color: #212021;" value="Submit">
                </form>
            </div>
        </div>
      
        
        
        <div class="row row-cols-1 row-cols-md-2 g-4 py-5">
            <% results.paginatedData.forEach(entry => { %>
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title"><%= entry.name %></h3>
                            <% if (entry.description !== null) { %>
                                <p class="card-text description"><%= entry.description %></p>
                            <% } else { %>
                                <p class="card-text description">No description</p>
                            <% } %>
                        </div>
                        <div class="mb-5 d-flex " style="flex-direction: row; margin:10px">
                            <% if (entry.language && entry.language.length > 0) { %>
                                <% entry.language.slice(0, 4).forEach((lang, index, array) => { %>
                                    <div class="language-box">
                                        <% if (index === 3) { %>
                                            <tag class="btn btn-primary" style="cursor: mouse; margin-left:10px"><%= lang %>+ </tag>
                                        <% } else { %>
                                            <tag class="btn btn-primary" style="cursor: mouse; margin-left:10px"><%= lang %></tag>
                                        <% } %>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <button class="btn btn-primary" style="cursor: mouse; margin-left:10px">No language used</button>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>

        <div class="pagination">
            <% if (results.previous) { %>
                <a href="/result?page=<%= results.previous.page %>&limit=<%= results.previous.limit %>">Previous</a>
            <% } %>

            <% const minPages = 10; %>
            <% const startPage = Math.max(1, results.currentPage - Math.floor(minPages / 2)); %>
            <% const endPage = Math.min(startPage + minPages - 1, results.totalPages); %>

            <% for (let i = startPage; i <= endPage; i++) { %>
                <a href="/result?page=<%= i %>&limit=<%= results.next ? results.next.limit : '' %>" <% if (i === results.currentPage) { %>class="active"<% } %>><%= i %></a>
            <% } %>

            <% if (results.next) { %>
                <a href="/result?page=<%= results.next.page %>&limit=<%= results.next.limit %>">Next</a>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>
